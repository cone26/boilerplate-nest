{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "apps/boilerplate-nest/src",
  "compilerOptions": {
    "deleteOutDir": true,
    "webpack": true,
    "tsConfigPath": "apps/boilerplate-nest/tsconfig.app.json"
  },
  "monorepo": true,
  "root": "apps/boilerplate-nest",
  "projects": {
    "auth": {
      "type": "application",
      "root": "apps/auth",
      "entryFile": "main",
      "sourceRoot": "apps/auth/src",
      "compilerOptions": {
        "tsConfigPath": "apps/auth/tsconfig.app.json"
      }
    },
    "game": {
      "type": "application",
      "root": "apps/game",
      "entryFile": "main",
      "sourceRoot": "apps/game/src",
      "compilerOptions": {
        "tsConfigPath": "apps/game/tsconfig.app.json"
      }
    },
    "common": {
      "type": "library",
      "root": "libs/common",
      "entryFile": "index",
      "sourceRoot": "libs/common/src",
      "compilerOptions": {
        "tsConfigPath": "libs/common/tsconfig.lib.json"
      }
    },
    "dao": {
      "type": "library",
      "root": "libs/dao",
      "entryFile": "index",
      "sourceRoot": "libs/dao/src",
      "compilerOptions": {
        "tsConfigPath": "libs/dao/tsconfig.lib.json"
      }
    },
    "admin": {
      "type": "application",
      "root": "apps/admin",
      "entryFile": "main",
      "sourceRoot": "apps/admin/src",
      "compilerOptions": {
        "tsConfigPath": "apps/admin/tsconfig.app.json"
      }
    }
  }
}